{% extends 'base.html.twig' %}

{% block title %}Page index{% endblock %}

{% block body %}
    <h1>Page index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Subtitle</th>
                <th>State</th>
                <th>IsPublish</th>
                <th>IsShowTitle</th>
                <th>IsShowDate</th>
                <th>IsShowDescription</th>
                <th>CssId</th>
                <th>CssName</th>
                <th>CssStyle</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.name }}</td>
                <td>{{ page.slug }}</td>
                <td>{{ page.subtitle }}</td>
                <td>{{ page.state }}</td>
                <td>{{ page.isPublish ? 'Yes' : 'No' }}</td>
                <td>{{ page.isShowTitle ? 'Yes' : 'No' }}</td>
                <td>{{ page.IsShowDate ? 'Yes' : 'No' }}</td>
                <td>{{ page.IsShowDescription ? 'Yes' : 'No' }}</td>
                <td>{{ page.cssId }}</td>
                <td>{{ page.cssName }}</td>
                <td>{{ page.cssStyle }}</td>
                <td>{{ page.createdAt ? page.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ page.updatedAt ? page.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_webapp_page_show', {'id': page.id}) }}">show</a>
                    <a href="{{ path('app_webapp_page_edit', {'id': page.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_webapp_page_new') }}">Create new</a>
{% endblock %}
