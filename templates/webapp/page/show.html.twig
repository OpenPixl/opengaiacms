{% extends 'base.html.twig' %}

{% block title %}Page{% endblock %}

{% block body %}
    <h1>Page</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ page.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ page.slug }}</td>
            </tr>
            <tr>
                <th>Subtitle</th>
                <td>{{ page.subtitle }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ page.state }}</td>
            </tr>
            <tr>
                <th>IsPublish</th>
                <td>{{ page.isPublish ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsShowTitle</th>
                <td>{{ page.isShowTitle ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsShowDate</th>
                <td>{{ page.IsShowDate ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsShowDescription</th>
                <td>{{ page.IsShowDescription ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CssId</th>
                <td>{{ page.cssId }}</td>
            </tr>
            <tr>
                <th>CssName</th>
                <td>{{ page.cssName }}</td>
            </tr>
            <tr>
                <th>CssStyle</th>
                <td>{{ page.cssStyle }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ page.createdAt ? page.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ page.updatedAt ? page.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_webapp_page_index') }}">back to list</a>

    <a href="{{ path('app_webapp_page_edit', {'id': page.id}) }}">edit</a>

