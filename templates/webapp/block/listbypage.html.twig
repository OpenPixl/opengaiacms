<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Slug</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
    {% for block in blocks %}
        <tr>
            <td>{{ block.id }}</td>
            <td>{{ block.name }}</td>
            <td>{{ block.slug }}</td>
            <td>
                <a href="{{ path('og_webapp_block_show', {'id': block.id}) }}">show</a>
                <a href="{{ path('og_webapp_block_edit', {'id': block.id}) }}"><i class="fa-duotone fa-cog"></i></a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
