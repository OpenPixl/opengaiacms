{% extends 'admin.html.twig' %}

{% block title %}Block{% endblock %}

{% block content %}
    <h1>Block</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ block.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ block.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ block.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('og_webapp_block_index') }}">back to list</a>

    <a href="{{ path('og_webapp_block_edit', {'id': block.id}) }}">edit</a>

    {{ include('webapp/block/_delete_form.html.twig') }}
{% endblock %}
