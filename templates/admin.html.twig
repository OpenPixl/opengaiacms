<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Admininstration{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('admin') }}
            <link rel="stylesheet" href="https://kit.fontawesome.com/1fb9149f4c.css" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('admin') }}
            <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        {% endblock %}
    </head>
    {% set route_name = app.request.attributes.get('_route') %}
    <body>
        <header>
            {% block header %}
                {{ render(controller('App\\Controller\\Admin\\DashboardController::NavBar')) }}
            {% endblock %}
        </header>
        <main>
            {% block side %}
                {% include('include/admin/side.html.twig') %}
            {% endblock %}
            <div id="content" class="float-end">
                <div class="container-fluid">
                    <section id="content_breadcumb" class="mt-3">
                        {% include('include/admin/breadcrumb.html.twig') %}
                    </section>
                    <section id="content_header">
                        {% block contenttitle %}{% endblock %}
                    </section>
                    <section id="content_main">
                        {% block content %}
                        {% endblock %}
                    </section>
                    <section id="content_footer">
                        {% block contentFooter %}
                        {% endblock %}
                    </section>
                </div>
            </div>
            {% block modals %}{% endblock %}
        </main>
        <footer>
            {% block footer %}{% endblock %}
        </footer>

    </body>
</html>
